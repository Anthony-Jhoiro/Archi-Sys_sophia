!$err = "-[#red]->"

!unquoted procedure SOMEONE_SAY(icon, name, before, prefix)
!if (%strlen(before) == 0)
    prefix --> "icon : ##name"
!else
    prefix -->[before] "icon : ##name"
!endif
!endprocedure

!unquoted procedure DEAMON_SAY(name, before="", prefix="")
