!endprocedure

!unquoted procedure ERROR(name, before="", prefix="")
!if (%strlen(before) == 0)
    prefix $err "‚ùå : ##name" << error >>
!else
    prefix $err[before] "‚ùå : ##name" << error >>
!endif
!endprocedure

